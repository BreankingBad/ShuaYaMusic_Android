<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/search_songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@color/main_color"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/search_singername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/second_color"
        android:textSize="12dp"
        android:layout_below="@id/search_songname"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/search_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/second_color"
        android:textSize="12dp"
        android:text="-"
        android:layout_toRightOf="@id/search_singername"
        android:layout_below="@id/search_songname"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/search_ablumname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/second_color"
        android:textSize="12dp"
        android:layout_toRightOf="@id/search_"
        android:layout_below="@id/search_songname"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/search_singername"
        android:layout_marginTop="10dp"/>

</RelativeLayout>